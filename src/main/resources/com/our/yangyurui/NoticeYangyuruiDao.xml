<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yangyurui.dao.NoticeYangyuruiDao">
	<!--查询公告总数-->
	<select id="getMessageNumber" resultType="int">
		select count(*) from message
	</select>
	
	<!--查询公告-->
	<select id="listMessage" parameterType="int" resultType="com.our.pojo.Message">
		select * from message where to_role=#{role} or to_role=3 order by time desc
	</select>

	<!--插入新公告-->
	<insert id="insertMessage" parameterType="com.our.pojo.Message">
		insert into message 
		values(#{message_id},#{from_id},#{to_role},#{content},#{time},#{delete_status})
	</insert>
	
</mapper>